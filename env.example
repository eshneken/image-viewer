# OCI Image Viewer Configuration

# Your Oracle Cloud Infrastructure Pre-Authenticated Request (PAR) URL
# This should be the full PAR URL that provides access to your object storage bucket
OCI_PAR_URL=https://your-bucket-namespace.objectstorage.your-region.oraclecloud.com/your-bucket-name/your-par-path

# OCI Configuration (for SDK-based object listing)
# Path to your OCI config file (usually ~/.oci/config)
OCI_CONFIG_FILE=~/.oci/config

# OCI Profile to use (usually DEFAULT)
OCI_PROFILE=DEFAULT

# OCI Namespace and Bucket Name (will be extracted from PAR URL if not provided)
OCI_NAMESPACE=your-namespace
OCI_BUCKET_NAME=your-bucket-name

# OCI Region (used for constructing URLs when not using PAR)
OCI_REGION=us-ashburn-1

# Flask secret key for session management
SECRET_KEY=your-secret-key-here-change-this-in-production

# Optional: Flask debug mode (set to False in production)
FLASK_DEBUG=True

# Fallback: Comma-separated list of image names (if SDK/PAR methods fail)
# IMAGE_LIST=image1.jpg,image2.png,photo1.jpeg

# Authentication
VIEWER_PASSWORD=changeme
